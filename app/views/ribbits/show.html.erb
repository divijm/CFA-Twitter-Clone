<p id="notice"><%= notice %></p>

<p>
  <strong>Croak:</strong>
  <%= @ribbit.croak %>
</p>

<p>
  <strong>Frog:</strong>
  <%= @ribbit.frog.email %>
</p>

<p>
  <strong>Comment:</strong>
  <%= render 'comments/form', comment: @comment %>
</p>

<p>
  <strong>All Comment:</strong>
  <% @comments.each do |comment| %>
  <p><%= comment.frog.email %></p>
  <p><%= comment.croak %></p>

  <% end %>
</p>

<%= link_to @follow_status, toggle_follow_ribbit_path %> |
<%= link_to @like_status, toggle_like_ribbit_path %> |
<%= link_to 'Edit', edit_ribbit_path(@ribbit) %> |
<%= link_to 'Back', ribbits_path %>
